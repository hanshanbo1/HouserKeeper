<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edu.nbl.houserkeeper.mian.FilemgrShowActivity">

    <com.edu.nbl.houserkeeper.view.ActionBarView
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件数量："
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_file_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3个"
            android:textColor="@color/base_color"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="占用空间："
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="800K"
            android:textColor="@color/base_color"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="#d9d9d9"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/btn_file_delete"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="0"
        android:background="@drawable/btn_selector_clean"
        android:text="删除所选文件"
        android:textColor="#fff"/>

</LinearLayout>
