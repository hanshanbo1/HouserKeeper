<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--第一排-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_rocket"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="手机加速"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/icon_rocket"
            android:padding="10dp"
            android:background="@drawable/iv_selector"/>
        <TextView
            android:id="@+id/tv_softmgr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="软件管理"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/icon_softmgr"
            android:padding="10dp"
            android:background="@drawable/iv_selector"/>
        <TextView
            android:id="@+id/tv_phonemgr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="手机检测"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/icon_phonemgr"
            android:padding="10dp"
            android:background="@drawable/iv_selector"/>
    </LinearLayout>
    <!--第二排-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_telmgr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="通讯大全"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/icon_telmgr"
            android:padding="10dp"
            android:background="@drawable/iv_selector"/>
        <TextView
            android:id="@+id/tv_filemgr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="文件管理"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/icon_filemgr"
            android:padding="10dp"
            android:background="@drawable/iv_selector"/>
        <TextView
            android:id="@+id/tv_sdclean"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="垃圾清理"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/icon_sdclean"
            android:padding="10dp"
            android:background="@drawable/iv_selector"/>
    </LinearLayout>

</LinearLayout>